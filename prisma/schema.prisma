generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shelter {
  id        String           @id @default(cuid())
  name      String
  province  String
  region    String
  url       String
  latitude  Float
  longitude Float
  author    String
  createdAt DateTime         @default(now())
  amenities ShelterService[]
}

model Service {
  id        String           @id
  amenities ShelterService[]
}

model ShelterService {
  shelterId String
  serviceId String
  value     String
  shelter   Shelter @relation(fields: [shelterId], references: [id])
  service   Service @relation(fields: [serviceId], references: [id])

  @@id([shelterId, serviceId])
}
