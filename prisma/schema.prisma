generator client {
  provider = "prisma-client-js"
  ssl      = true
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model shelter {
  id        String            @id @default(cuid())
  name      String
  province  String
  region    String
  url       String
  latitude  Float
  longitude Float
  author    String
  createdAt DateTime          @default(now())
  amenities shelter_service[]
}

model shelter_service {
  shelterId        String
  serviceAttribute String
  serviceValue     String
  shelter          shelter @relation(fields: [shelterId], references: [id])

  @@id([shelterId, serviceAttribute])
}

model shelter_archive {
  id        String                    @default(cuid())
  name      String
  province  String
  region    String
  url       String
  latitude  Float
  longitude Float
  author    String
  createdAt DateTime                  @default(now())
  amenities shelter_service_archive[]

  @@id([id, createdAt])
}

model shelter_service_archive {
  shelterId        String
  serviceAttribute String
  serviceValue     String
  date             DateTime
  shelter          shelter_archive @relation(fields: [shelterId, date], references: [id, createdAt])

  @@id([shelterId, serviceAttribute, date])
}
