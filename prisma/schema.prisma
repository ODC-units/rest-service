generator client {
  provider = "prisma-client-js"
  ssl      = true
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model service {
  id                    String                    @id
  amenities             shelter_service[]
  ShelterServiceArchive shelter_service_archive[]
}

model shelter {
  id        String            @id @default(cuid())
  name      String
  province  String
  region    String
  url       String
  latitude  Float
  longitude Float
  author    String
  createdAt DateTime          @default(now())
  amenities shelter_service[]
}

model shelter_service {
  shelterId String
  serviceId String
  value     String
  shelter   shelter @relation(fields: [shelterId], references: [id])
  service   service @relation(fields: [serviceId], references: [id])

  @@id([shelterId, serviceId])
}

model shelter_archive {
  id        String                    @default(cuid())
  name      String
  province  String
  region    String
  url       String
  latitude  Float
  longitude Float
  author    String
  createdAt DateTime                  @default(now())
  amenities shelter_service_archive[]

  @@id([id, createdAt])
}

model shelter_service_archive {
  shelterId String
  date      DateTime
  serviceId String
  value     String
  shelter   shelter_archive @relation(fields: [shelterId, date], references: [id, createdAt])
  service   service         @relation(fields: [serviceId], references: [id])

  @@id([shelterId, date, serviceId])
}
